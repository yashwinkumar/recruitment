<div class="row">
  <div class="col-md-10 col-md-offset-1" style="margin-top: 5%">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Register</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <% if resource.errors.any? %>
            <div class="well well-sm text-danger">
              <ul>
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-7">
              <%= f.email_field :email, class: 'form-control', required: :true %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-7">
              <%= f.password_field :password, class: 'form-control', required: :true %>
              <div class="help-block">Minimum 8 characters</div>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
            <div class="col-sm-7">
              <%= f.password_field :password_confirmation, class: 'form-control', required: :true %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-3 control-label">
              Role
            </label>

            <div class="col-sm-7">
              <% Role.where.not(name: 'admin').each do |role| %>
                <label class="radio-inline">
                  <input type="radio" name="role" value="<%= role.name %>" required><%= role.label %>
                </label>
              <% end %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4">
              <%= f.submit "Signup", class: 'btn btn-success btn-block' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
