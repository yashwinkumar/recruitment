<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <% if resource.errors.any? %>
      <div class="well well-sm text-danger">
        <ul>
          <% resource.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= f.password_field :password, class: 'form-control' %>
          <div class="help-block">Minimum 8 characters</div>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: "col-sm-3 control-label" %>
        <div class="col-sm-6">
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <%= f.submit "Signup", class: 'btn btn-success btn-block' %>
        </div>
      </div>
    <% end %>
  </div>
</div>