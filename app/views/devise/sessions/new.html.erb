<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">Login</h3>
      </div>
      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.email_field :email, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9">
              <div class="checkbox">
                <label>
                  <input type="checkbox"> Remember me
                </label>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3">
              <%= f.submit "Login", class: 'btn btn-success btn-block' %>
            </div>
          </div>
        <% end %>
        <div class="row">
          <div class="col-md-12">
            <% hm = User.find ENV['HIRING_MANAGER_ID'].to_i %>
            <% consultant = User.find ENV['CONSULTANT_ID'].to_i  %>
            <% candidate = User.find ENV['CANDIDATE_ID'].to_i %>
            <%= link_to t('auto_login.hm1'), profile_url(id: hm.id, token: (hm.token ? hm.token : hm.new_token!)), class: 'btn btn-default' %>
            <%= link_to 'Consulting company auto login', profile_url(id: consultant.id, token: (consultant.token ? consultant.token : consultant.new_token!)), class: 'btn btn-default' %>
            <%= link_to 'Candidate auto login', profile_url(id: candidate.id, token: (candidate.token ? candidate.token : candidate.new_token!)), class: 'btn btn-default' %>
          </div>
          <div class="col-md-12" style="margin: 1% 0;">
            <% hm2 = User.where(id: ENV['HIRING_MANAGER_ID2'].to_i).first %>
            <%= link_to t('auto_login.hm2'), profile_url(id: hm2.id, token: (hm2.token ? hm2.token : hm2.new_token!)), class: 'btn btn-default' %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

