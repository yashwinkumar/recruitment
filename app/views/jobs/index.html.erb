<h1>Listing Jobs</h1>

<% if policy(@jobs).create? %>
  <div class="pull-right">
    <%= link_to 'New Job', new_job_path %>
  </div>
<% end %>

<table class="table table-bordered table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Location</th>
      <% if policy(@jobs).update? || policy(@jobs).destroy? %>
        <th>Actions</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.title, job_path(job) %></td>
        <td><%=truncate(job.description, length: 20) %></td>
        <td><%= job.location %></td>
        <td>
        <% if policy(job).update? || policy(job).destroy? %>
          <%= link_to 'Edit', edit_job_path(job) %>&nbsp;&nbsp;
          <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %> &nbsp;&nbsp;
            <%= link_to 'Submissions', job_submissions_path(job) %>
        <% else %>
            <%= link_to "Apply", new_job_submission_path(job) %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>