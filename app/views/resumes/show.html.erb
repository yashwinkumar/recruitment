<div class="row">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @resume_sections.each do |resume_sec| %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= resume_sec.section.name %>" aria-expanded="true" aria-controls="<%= resume_sec.section.name %>">
              <%= resume_sec.section.name %>
            </a>
          </h4>
        </div>
        <div id="<%= resume_sec.section.name %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">
            <p>
              <%= video_tag resume_sec.video, :size => "400x240", :controls => true %>
            </p>
            <p><strong>Rating:</strong> <%= resume_sec.rating %> out of 5</p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-10">
    <div class="jumbotron" style="padding-top: 10px">
      <h3>Make Decision -
        <small class="label label-default"><%= @submission.status.titlecase %></small>
      </h3>
      <div>
        <% if @submission.submitted? %>
          <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
          <%= link_to 'Park', '#', class: 'btn btn-info comment-btn', data: {status: 'park'} %>
          <%= link_to 'Reject', '#', class: 'btn btn-danger comment-btn', data: {status: 'discard'} %>
        <% elsif @submission.parked? %>
          <p>
            <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
            <%= link_to 'Reject', '#', class: 'btn btn-danger comment-btn', data: {status: 'discard'} %>
          </p>
        <% elsif @submission.discarded? %>
          <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
          <%= link_to 'Park', '#', class: 'btn btn-info comment-btn', data: {status: 'park'} %>
        <% end %>
        <% @comments.each do |comment| %>
          <p class="bg-warning" style="margin-bottom: 5px;padding: 2px 5px;"><%= comment.description %></p>
        <% end %>
      </div>

      <div class="comment-section">
        <%= form_tag save_comment_job_submission_path(@job, @submission), class: 'form-horizontal commetn_form' do %>
          <%= hidden_field_tag :status %>
          <div class="form-group">
            <%= label_tag :comment, 'Comment', class: 'col-sm-2 control-label' %>
            <div class="col-sm-6">
              <%= text_area_tag :comment, '', class: 'form-control', rows: 4, placeholder: 'Leave your comment here...' %>
            </div>
          </div>
          <div class="col-sm-6 col-sm-offset-2">
            <%= submit_tag :Submit, class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('.comment-section').hide();
  $('.comment-btn').on('click', function (e) {
    e.preventDefault();
    $('.comment-section').show(500);
    $('#status').val($(this).data('status'));
  });
</script>
