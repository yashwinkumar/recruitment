<div class="row">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <% @resume_sections.each_with_index do |resume_sec, i=0| %>
      <div class="panel panel-default">
        <div class="panel-heading" role="tab" id="headingOne">
          <h4 class="panel-title">
            <a role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= resume_sec.section.id %>" aria-expanded="true" aria-controls="<%= resume_sec.section.name %>">
              <%= resume_sec.section.name %>
            </a>
          </h4>
        </div>
        <div id="<%= resume_sec.section.id %>" class="panel-collapse collapse <%= "in" if i == 0 %>" role="tabpanel" aria-labelledby="headingOne">
          <div class="panel-body">
            <p>
              <%= video_tag resume_sec.video, :size => "400x240", :controls => true %>
            </p>

            <%= render partial: 'resume_sections/ratings', locals:{resume_sec:resume_sec} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<hr>

<h4>Attachments</h4>
<div class="row">
  <div class="col-md-10">

    <% @submission.attachments.each do |attachment| %>
      <li>
        <%= link_to attachment.name, attachment.file.url, target: '_blank', class: 'btn btn-link' %>
      </li>
    <% end %>
  </div>
</div>

<% if current_user.hm? or current_user.consultant? %>
  <div class="row">
    <div class="col-md-10">
      <div class="jumbotron" style="padding-top: 10px">
        <h3>Make Decision
          <%= link_to "Back", job_submissions_path(@job), class: 'pull-right' %>
        </h3>
        <div>
          <% if current_user.hm? %>
            <% if @submission.processing? %>
              <%= link_to 'Interview', new_job_submission_interview_path(@job,@submission) , class: 'btn btn-primary'%>
              <%= link_to 'Park', '#', class: 'btn btn-info comment-btn', data: {status: 'park'} %>
            <% elsif @submission.parked? %>
              <%= link_to 'Interview', new_job_submission_interview_path(@job,@submission) , class: 'btn btn-primary'%>
            <% elsif @submission.interview_scheduled? %>
              <%= link_to 'Edit Interview', edit_job_submission_interview_path(@job,@submission, @submission.interview), class: 'btn btn-success' %>
              <%= link_to 'Hire', '#', class: 'btn btn-info comment-btn', data: {status: 'hire'} %>
            <% end %>
            <% unless @submission.discarded? %>
              <%= link_to 'Reject', '#', class: 'btn btn-danger comment-btn', data: {status: 'discard'} %>
            <% end %>
          <% elsif current_user.consultant? %>
            <% if @submission.processing? %>
              <%= link_to 'Submitted to HM', '#', class: 'btn btn-primary disabled' %>
            <% end %>
            <% if @submission.submitted? %>
              <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
              <%= link_to 'Park', '#', class: 'btn btn-info comment-btn', data: {status: 'park'} %>
              <%= link_to 'Reject', '#', class: 'btn btn-danger comment-btn', data: {status: 'discard'} %>
            <% elsif @submission.parked? %>
              <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
              <%= link_to 'Reject', '#', class: 'btn btn-danger comment-btn', data: {status: 'discard'} %>
            <% elsif @submission.discarded? %>
              <%= link_to 'Submit to HM', change_status_job_submission_path(@job, @submission, status: 'process'), class: 'btn btn-primary' %>
              <%= link_to 'Park', '#', class: 'btn btn-info comment-btn', data: {status: 'park'} %>
            <% end %>
          <% end %>

          <% @comments.each do |comment| %>
            <p class="bg-warning" style="margin-bottom: 5px;padding: 2px 5px;"><%= comment.description %></p>
          <% end %>
        </div>
        <br>

        <div class="comment-section">
          <%= form_tag save_comment_job_submission_path(@job, @submission), class: 'form-horizontal commetn_form' do %>
            <%= hidden_field_tag :status %>
            <div class="form-group">
              <%= label_tag :comment, 'Comment', class: 'col-sm-2 control-label' %>
              <div class="col-sm-8">
                <%= text_area_tag :comment, '', class: 'form-control', rows: 4, placeholder: 'Leave your comment here...' %>
              </div>
            </div>
            <div class="col-sm-6 col-sm-offset-3">
              <%= submit_tag :Submit, class: 'btn btn-success btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('.comment-section').hide();
  $('.comment-btn').on('click', function (e) {
    e.preventDefault();
    $('.comment-section').show(500);
    $('#status').val($(this).data('status'));
  });
</script>
