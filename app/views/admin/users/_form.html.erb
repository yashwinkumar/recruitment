<div class="row">
  <div class="col-sm-7 col-sm-offset-1" style="margin-top: 3%">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h3 class="panel-title">
          <span class="glyphicon glyphicon-user"></span>
            Creating New User
        </h3>
       </div>
      <div class="panel-body">
        <%= form_for([:admin, @user]) do |f| %>
          <div class="form-group">
            <%= f.label :email, class: "col-sm-4 control-label" %>
            <div class="col-sm-7">
              <div class="input-group">
                <span class="input-group-addon">
                  <i class="glyphicon glyphicon-envelope"></i>
                </span>
                <%= f.text_field :email, class: 'form-control' %>
              </div>
            </div>
          </div>
         
          <div class="form-group">
            <%= f.label :password, class: 'col-sm-4 control-label required' %>
            <div class="col-sm-7">
              <%= f.text_field :password, class: 'form-control', required: true %>
            </div>
          </div>

          <div class="form-group">
            <label class="col-sm-3 control-label">
              Role:
            </label>

            <div class="col-sm-12">
              <% Role.where("name = ? OR name = ? OR name = ?", 'hm', 'consultant', 'candidate').each do |role| %>
                <label class="radio-inline">
                  <input type="radio" name="role" value="<%= role.name %>" required><%= role.label %>
                </label>
              <% end %>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-4 col-sm-4"><br/>
              <%= f.submit class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>



